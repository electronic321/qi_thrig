<Alloy>
	<Window id="self">

		<View id="view_topBar">
			<Label id="lbl_events"></Label>
		</View>
		<View id="view_welcome">
			<Label id="lbl_welcome"></Label>
			<Label id="lbl_userName"></Label>
		</View>
		<View id="view_searchBar">

			<View id="view_search">
				<TextField id = "tf_searchBar"></TextField>
			</View>
			<View id="view_imgNeighbour">
				<ImageView id="img_searchNeighbour"></ImageView>
			</View>
			<View id="view_imgSearch">
				<ImageView id="img_searchIcon"></ImageView>
			</View>

		</View>
		<View id="view_dealsandEvents">
