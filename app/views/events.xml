			</View>
			<View id="view_imgView">
				<ImageView id="img_view"></ImageView>
				<Label id="lbl_view"></Label>

			</View>
			<View id="view_imgAdd">
				<ImageView id="img_add"></ImageView>
				<Label id="lbl_add"></Label>

			</View>
			<View id="view_imgPickInterest">
				<ImageView id="img_pickInterest"></ImageView>
				<Label id="lbl_interest"></Label>

			</View>
		</View>
		<ScrollableView id="scrollableView" showPagingControl="true"></ScrollableView>
		<View id="view_tabBar">
			<View id="view_imgHome">
				<ImageView id="img_home"></ImageView>
			</View>
			<View id="view_imgEvents">
				<ImageView id="img_events"></ImageView>
			</View>
			<View id="view_imgUser">
				<ImageView id="image_user"></ImageView>
			</View>
			<View id="view_imgClose">
				<ImageView id="img_close"></ImageView>
			</View>

		</View>
